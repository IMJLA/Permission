        # Hashtable with known domain DNS names as keys and objects with Dns,NetBIOS,SID,DistinguishedName,AdsiProvider,Win32Accounts properties as values
        [Hashtable]$DomainsByFqdn = ([Hashtable]::Synchronized(@{})),

